<Application
    x:Class="TemperatureReader.ClientApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TemperatureReader.ClientApp"
    xmlns:converters="using:TemperatureReader.ClientApp.Converters"
    RequestedTheme="Light">
  <Application.Resources>
    <Style x:Key="AppTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
      <Setter Property="Margin" Value="12,6,0,6" />
      <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
  </Application.Resources>

</Application>
